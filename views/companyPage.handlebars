<link rel="stylesheet" href="styles/companyPageStyle.css" media="screen" title="no title" charset="utf-8">

<div class="container">
    <h2>{{msg}}: Employee</h2>
    <br>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label for="exampleFormControlInput1">Toy Name</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Toy Price</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Toy Quantity</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Toy Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Manufacturer</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    {{#each dbManufacturer}}
                    <option>
                        {{manufacturerName}}
                    </option>
                    {{/each}}
                </select>
                * if its a new manufacturer, create here!
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Toy Category</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    {{#each dbCategory}}
                    <option>
                        {{categoryName}}
                    </option>
                    {{/each}}
                </select>
                * if its a new category, create here!
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Toy Ratings</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect2">For Children Older than</label>
                <select multiple class="form-control" id="exampleFormControlSelect2">
                    <option>1 year</option>
                    <option>2 year</option>
                    <option>3 year</option>
                    <option>4 year</option>
                    <option>5 year</option>
                </select>
            </div>
            <button type="button" class="btn btn-secondary btn-lg btn-block">Add to Inventory</button>
            <br>
        </div>
        <div class="row-2"></div>
        <div class="col-8">Inventory Table</div>
        <a href="/">‚Üê Back To Home</a>
    </div>
</div>