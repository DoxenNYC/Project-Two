<link rel="stylesheet" href="styles/orderPageStyle.css" media="screen" title="no title" charset="utf-8">

<div class="text-center mt-5">
    <h2>{{msg}}</h2>
    <h2>Order Page</h2>
</div>

<br>
<div id="submitOrderCard" class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h3 class="card-header">Current Order</h3>
                <div class="card-body">
                    <form>
                        {{!-- <div class="form-group">
                            <label for="exampleInputEmail1">Customer name</label>
                            <input type="text" class="form-control" id="custName" placeholder="Enter your Name">
                        </div> --}}
                        <div class="form-group">
                            <label for="exampleInputEmail1"><span id="toyId">{{dbToy.id}}</span>: Toy name</label>
                            <h3 class="form-control" id="toyName">{{dbToy.toyName}}</h3>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Toy price $</label>
                            <h3 class="form-control" id="toyPrice">{{dbToy.price}}</h3>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Available Inventory Quantity</label>
                            <h3 class="form-control" id="toyStock">{{dbToy.unitStock}}</h3>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Toy Quantity</label>
                            <input type="text" class="form-control" id="toyQuantity" placeholder="Enter Toy Quantity">
                            <label id="quantityWarning" for="exampleInputPassword1">Are you sure you want to order
                                x
                                amount?</label>
                        </div>

                        <button id="order-submit" type="submit" class="btn btn-primary">Submit Order</button>
                        <p id="warning" class="text-danger">Sorry! Your requested quantity exceeds available inventory</p>
                        
                        <button id="currentOrders" type="submit" class="btn btn-primary">Current Orders</button>
                        <a href="/orderConfirm" id="warningConfirm" class="btn btn-light">Yes, I'm sure...</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="orderHistoryCard" class="row">
        <div class="col-md-12">
            <div class="card">
                <div id="cardHeaderOne" class="card-header">
                    Shopping Cart1
                    <div>
                        <button id="orderConfirmOne" type="submit" class="btn btn-primary">Yes, I'm sure...</button>
                    </div>
                </div>
                <div class="card-body">
                    <table id="columnHeaders">
                        <tr>
                            <th>Toy Name</th>
                            <th>Toy Quantity</th>
                            <th>Time Ordered</th>
                        </tr>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <div id="currentOrderValidationCard" class="row">
        <div class="col-md-12">
            <div class="card">
                <div id="cardHeaderTwo" class="card-header">
                    Shopping Cart2
                </div>
                <div class="card-body">
                    <table id="columnHeadersTwo">
                        <tr>
                            <th>Toy Name</th>
                            <th>Toy Quantity</th>
                            <th>Time Ordered</th>
                        </tr>
                    </table><br>
                    {{!-- <button id="orderConfirmTwo" type="submit" class="btn btn-primary">Yes, I'm sure...</button>  --}}
                    <a href="/orderConfirm" id="orderConfirmTwo" class="btn btn-primary">Yes, I'm sure...</a>

                </div>
            </div>
        </div>
    </div>
</div>

<a href="/">‚Üê Back To Home</a>

</div>

